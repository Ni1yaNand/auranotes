<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
  <div class="flex flex-col py-8 ">
    <!-- Render Note -->
    <%= render @note %>

    <!-- Buttons -->
    <div class="flex items-center justify-start space-x-4 mt-6">
      <!-- Edit Button -->
      <%= link_to "Edit this note", edit_note_path(@note), class: "border border-black bg-black text-white rounded-md py-3 px-6 font-medium hover:bg-gray-700 transition-all duration-200" %>

      <!-- Destroy Button -->
      <%= button_to "Destroy this note", note_path(@note), method: :delete, 
        class: "border border-red-500 bg-red-500 text-white rounded-md py-3 px-6 font-medium hover:bg-red-700 transition-all duration-200", 
        data: { confirm: "Are you sure you want to delete this note?" } %>
    </div>
  </div>
</div>
