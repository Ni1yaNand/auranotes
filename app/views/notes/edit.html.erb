<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-6 lg:px-8">
  <div class="max-w-3xl w-full bg-white shadow-md rounded-lg p-8">
    <!-- Page Title -->
    <h1 class="text-3xl font-semibold text-black mb-6 text-center">Edit Note</h1>

    <!-- Edit Form -->
    <%= form_with model: @note, class: "space-y-6" do |f| %>
      <!-- Title Field -->
      <div>
        <label for="note_title" class="block text-sm font-medium text-gray-700">Title</label>
        <%= f.text_field :title, id: "note_title", 
          class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-black focus:ring-0 text-base p-2" %>
      </div>

      <!-- Description Field -->
      <div>
        <label for="note_description" class="block text-sm font-medium text-gray-700">Description</label>
        <%= f.text_area :description, id: "note_description", 
          class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-black focus:ring-0 text-base p-2", rows: 5 %>
      </div>

      <!-- Color Selector -->
      <div>
        <label for="note_color" class="block text-sm font-medium text-gray-700">Color</label>
        <%= f.text_field :color, id: "note_color", 
          placeholder: "Enter color (e.g., 'Red', 'Blue', 'Green')",
          class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-black focus:ring-0 text-base p-2" %>
      </div>

      <!-- Buttons -->
      <div class="flex items-center justify-between mt-8">
        <%= link_to "Cancel", note_path(@note), 
          class: "rounded-md py-2 px-6 bg-gray-100 text-black font-medium border border-gray-300 hover:bg-gray-200 transition-all duration-200" %>

        <%= f.submit "Update Note", 
          class: "rounded-md py-2 px-6 bg-blue-500 text-white font-medium hover:bg-blue-600 transition-all duration-200 shadow-sm" %>
      </div>
    <% end %>
  </div>
</div>
